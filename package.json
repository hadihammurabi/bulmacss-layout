{
  "name": "bulmacss-layout",
  "version": "1.0.0",
  "description": "This repositories is minimal part of core [BulmaCSS](https://github.com/jgthms/bulma) that contains layout features only.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix && npm run build-cleancss",
    "build-autoprefix": "postcss --use autoprefixer --map false --output css/bulma.css css/bulma.css",
    "build-cleancss": "cleancss -o css/bulma.min.css css/bulma.css",
    "build-clean": "rimraf css",
    "build-sass": "node-sass --output-style expanded --source-map true bulma.sass css/bulma.css",
    "deploy": "npm run build",
    "start": "npm run build-sass -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hadihammurabi/bulmacss-layout.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hadihammurabi/bulmacss-layout/issues"
  },
  "homepage": "https://github.com/hadihammurabi/bulmacss-layout#readme",
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.2",
    "rimraf": "^2.6.3"
  }
}